	*/
	$.fn.displayAlert = function(type, msg){
		if(type == ''){
			type = 'alert-warning'; 
		}
		
		aBox = '<div class="alert ' + type + ' alert-dismissable" style="margin-top:15px;">' +
	            '<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>' +
	             msg +
	        '</div>';
	    this.prepend(aBox);
	    $('.alert').fadeOut(1000)
	};
	
	
