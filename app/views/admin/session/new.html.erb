<div class="row" style="margin-top:10%;">
	
	<div class="col-lg-2 col-centered">
		<%= image_tag("inbox_logo2.png", style: 'width:164px;') %>
	</div>
	
</div>

<div class="row">
    <div class="col-md-4 col-md-offset-4">

        <div id="" class="login-panel panel panel-default" style="margin-top: 8%;">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">
              <% if flash.any? %>
                  <% flash.each do |k,v| %>
                      <div class="alert alert-<%= k %> alert-dismissable">

                            <%= v %>

                      </div>
                  <% end %>
              <% end %>
            	<%= form_tag admin_login_user_path, role: "form" do %>

                    <fieldset>
                        <div class="form-group">
                        <%= text_field_tag :login, params[:login], placeholder: "Username", class: "form-control", autofocus: true  %>
                            
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" name="password" type="password" value="">
                        </div>
                        <div class="checkbox">
                            <label>
                                <input name="remember" type="checkbox" value="Remember Me">Remember Me
                            </label>
                        </div>
                        <%= submit_tag "Login", class: "btn btn-lg btn-primary btn-block" %>
                        
                        
                    </fieldset>
                <% end %>
            </div>
        </div>
    </div>
</div>
