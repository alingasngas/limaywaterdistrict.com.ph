<% content_for :page_style do %>
    <!-- Start specific page styles -->

    <!-- End specific page styles -->
<% end %>
<% content_for :page_content do %>
    <div class='row'>
      <div class='col-lg-12'>

        <%= generate_breadcrumbs %>
        <div class='panel panel-primary'>
          <div class='panel-heading'>

            <%= action_name.capitalize %> <%= controller_name.capitalize.singularize %>
          </div>
          <div class='panel-body'>
            <% if @post.errors.any? %>
                <div class='alert alert-danger'>
                  <ul>
                    <% @post.errors.full_messages.each do |err| %>
                        <li><%= err %></li>
                    <% end %>
                  </ul>

                </div>
            <% end %>
            <%= form_for(@post, :as => :post, :validate => true, :html => { :multipart => true }, :url => admin_post_path(@post)) do |f| %>
							<%= render 'form', f: f %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
<% end %>