<div class="col-md-4">

      <!-- Blog Search Panel -->
			<div class="panel panel-default">
				<div class="panel-heading"><b>Search</b></div>
				<div class="panel-body">
	        <%= form_tag posts_path, class: '', method: 'get' do %>
          <div class="input-group">

              <%= text_field_tag :q, params[:q], class: 'form-control' %>
              <span class="input-group-btn">
                  <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
              </span>

          </div>
		      <% end %>
				</div>
			</div>

      <!-- Blog Archives Panel -->
			<div class="panel panel-default">
				<div class="panel-heading"><b>Archives</b></div>
				<div class="panel-body">
	            <% keys = @archives.keys[0..7] %>
	            <% if keys.size > 0 %>
		            <% keys.in_groups_of(4).each do |g| %>
										<div class="col-lg-6">
			                  <ul class="list-unstyled">
				                    <% g.each do |m|  %>
					                    <% if m %>
				                        <li><%= link_to m.strftime('%B %Y'), posts_path(d: m) %></li>
						                  <% end %>
					                  <% end %>
												</ul>
			              </div>
			          <% end %>
		          <% end %>
				</div>
			</div>

      <!-- Side Widget Well -->
      <div class="panel panel-default">
	      <div class="panel-heading"><b>Popular Links</b></div>
					<div class="panel-body">
					<ul class="list-group">

						<% @popular.each do |page| %>
							<li class="list-group-item"><%= link_to page.page_title, "/#{page.page_url}", title: page.page_title %></li>
						<% end %>
					</ul>
					</div>

      </div>

			<div class="well">
				<div id="fb-sidebar-widget" class="fb-like-box" data-href="https://www.facebook.com/pages/Mariveles-Water-District/1553420708222422" data-width="100%	" data-height="" data-colorscheme="light" data-show-faces="true" data-header="true" data-stream="true" data-show-border="true"></div>
			</div>

  </div>